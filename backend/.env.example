# SmartCart: Clothes & Gifts Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# =============================================================================
# UNSPLASH ACCESS KEYS (Get from https://unsplash.com/developers)
# =============================================================================
# You need multiple keys to handle 1000+ images efficiently
# Each key allows 50 requests per hour
# 10 keys = 500 requests per hour = 1000+ images in 2 hours

# Primary Keys (Required)
UNSPLASH_ACCESS_KEY_1=your_first_unsplash_access_key_here
UNSPLASH_ACCESS_KEY_2=your_second_unsplash_access_key_here
UNSPLASH_ACCESS_KEY_3=your_third_unsplash_access_key_here
UNSPLASH_ACCESS_KEY_4=your_fourth_unsplash_access_key_here
UNSPLASH_ACCESS_KEY_5=your_fifth_unsplash_access_key_here

# Additional Keys (Optional - for higher capacity)
UNSPLASH_ACCESS_KEY_6=your_sixth_unsplash_access_key_here
UNSPLASH_ACCESS_KEY_7=your_seventh_unsplash_access_key_here
UNSPLASH_ACCESS_KEY_8=your_eighth_unsplash_access_key_here
UNSPLASH_ACCESS_KEY_9=your_ninth_unsplash_access_key_here
UNSPLASH_ACCESS_KEY_10=your_tenth_unsplash_access_key_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/smartcart-ecommerce
MONGODB_TEST_URI=mongodb://localhost:27017/smartcart-ecommerce-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Redis Configuration (for ML caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Payment Gateway Configuration
# Stripe (for international payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Razorpay (for Indian payments)
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ML Configuration
ML_RECOMMENDATION_THRESHOLD=0.6
ML_SEARCH_RANKING_WEIGHTS={"relevance": 0.4, "popularity": 0.3, "user_preference": 0.3}
ML_CACHE_DURATION=3600
ML_BATCH_SIZE=100

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=50

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Development Configuration
DEBUG_MODE=true
MOCK_PAYMENT=true
